# Database
MONGODB_URI=mongodb://localhost:27017/platform-ads

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=1d

# Mail Configuration
# For development (MailDev)
# MAIL_HOST=localhost
# MAIL_PORT=1025
# MAIL_SECURE=false
# MAIL_USER=
# MAIL_PASS=

# For production (Gmail, SendGrid, AWS SES, etc.)
# Gmail Example (RECOMMENDED - Port 587 with STARTTLS):
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM="Platform Ads <noreply@platformads.com>"

# SendGrid Example:
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_SECURE=false
# MAIL_USER=apikey
# MAIL_PASS=your-sendgrid-api-key
# MAIL_FROM="Platform Ads <noreply@platformads.com>"

# AWS SES Example:
# MAIL_HOST=email-smtp.us-east-1.amazonaws.com
# MAIL_PORT=587
# MAIL_SECURE=false
# MAIL_USER=your-aws-access-key-id
# MAIL_PASS=your-aws-secret-access-key
# MAIL_FROM="Platform Ads <noreply@platformads.com>"

# Environment
NODE_ENV=development
