        }
        .muted {
          color: #a8b3c3 !important;
        }
        .divider {
          border-color: #243041 !important;
        }
      }
      /* ----- Mobile tweaks ----- */
      @media screen and (max-width: 600px) {
        .container {
          width: 100% !important;
        }
        .px-32 {
          padding-left: 20px !important;
          padding-right: 20px !important;
        }
        .py-40 {
          padding-top: 28px !important;
          padding-bottom: 28px !important;
        }
      }
    </style>
  </head>
